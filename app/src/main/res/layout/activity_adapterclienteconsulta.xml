<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.adapterclienteconsulta">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/txtNombreClienteAdapter1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="8dp"
        android:text="@string/textview"
        android:textSize="20sp" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="0.3"
    android:orientation="vertical"
    android:padding="3dp">

        <TextView
            android:id="@+id/txtDNIClienteAdapter1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"

            android:textColor="#323232"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtFechaClienteAdapter1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:textColor="#cfcfcf"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDescripcionClienteAdapter1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="DescripciÃ³n del cliente"
            android:textColor="#cfcfcf"
            android:textSize="15sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewClienteAdapter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:src="@drawable/caballo" />
    <ImageButton
        android:id="@+id/imageButton31"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/download" />


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>