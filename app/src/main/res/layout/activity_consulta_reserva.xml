<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ConsultaReserva">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="394dp"
        android:layout_height="571dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Circuito:"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txtConsutlaReservaFecha"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtConsultaReservaCircuito"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Partida:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtConsutlaReservaHoraPartida"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Regreso:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtConsutlaReservaHoraRegreso"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposito:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtConsutlaReservaDeposito"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtConsutlaReservaPendiente"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guia:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Usuario:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btDescargaConsultaReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descargar Documentacion" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clientes" />

        <ListView
            android:id="@+id/lvConsutlaReservaclientes"
            android:layout_width="match_parent"
            android:layout_height="135dp">


        </ListView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabalgatas" />

        <ListView
            android:id="@+id/lvConsutlaReservaCaballos"
            android:layout_width="wrap_content"
            android:layout_height="154dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btEditarConsultaReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="editar" />

            <Button
                android:id="@+id/btEliminarConsultaReserva"
                android:layout_marginStart = "10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#FF0000"
                android:layout_weight="1"
                android:text="eliminar" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>