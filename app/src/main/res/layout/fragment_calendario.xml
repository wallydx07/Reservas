<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    tools:context=".view.Calendario">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/listviewhoras"
            android:layout_width="352dp"
            android:layout_height="464dp"

            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonfecha"
            app:layout_constraintVertical_bias="0.111"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/txtfecha"
            android:layout_width="136dp"
            android:layout_height="46dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/report_planned_date"
            android:inputType="date"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/buttonfecha"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonfecha"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:onClick="onclick1"
            android:text="Fecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>