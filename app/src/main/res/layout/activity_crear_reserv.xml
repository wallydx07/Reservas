<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustResize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Guia:"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerGuiaReservaProducto"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etFechaReservaProducto"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Hora Inicio
"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerhorainicioReservaProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/horaspermitidas" />

                <TextView
                    android:id="@+id/Hs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Hora Fin"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerhorafinReservaProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/horaspermitidas" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/circuito"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerReservaProductoCircuito"
                    android:layout_width="146dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="246dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="231dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtDatosApellidoyNombre"
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Apellido y Nombre"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        tools:text="" />

                    <EditText
                        android:id="@+id/txtDatosDNI"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="DNI"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="8"
                        tools:text="" />

                    <EditText
                        android:id="@+id/txtDAtosFechaNacimiento"
                        android:layout_width="332dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Fecha Nacimiento(DD/MM/YYYY)"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="" />

                    <Spinner
                        android:id="@+id/spinnerReservaProductoCaballo"
                        android:layout_width="334dp"
                        android:layout_height="43dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:enabled="true" />

                </LinearLayout>


                <Button
                    android:id="@+id/bottomDatosnAgregar"
                    android:layout_width="58dp"
                    android:layout_height="236dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:imeOptions="actionDone"

                    android:text="+" />

            </LinearLayout>

            <ListView
                android:id="@+id/listViewDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/txtCorreoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="correo"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:text="" />

            <EditText
                android:id="@+id/txtTelefonoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Telefono"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="" />

            <EditText
                android:id="@+id/txtHospedajeDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Hospedaje"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="" />

            <EditText
                android:id="@+id/txtProcedenciaDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Procedencia"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="" />
            <EditText
                android:id="@+id/txtReservaProductoTotal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Total"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtReservaProductoAnticipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Anticipo"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:text="100" />


                <EditText
                    android:id="@+id/txtReservaProductoPendiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Pendiente"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:text="0" />
            </LinearLayout>


            <Button
                android:id="@+id/buttonReservaProductoFinalizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar Reserva" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>