<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    tools:context=".view.reservaDatosClientesFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="715dp"
        android:windowSoftInputMode="adjustResize">

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="613dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <EditText
                android:id="@+id/txtDatosApellidoyNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Apellido y Nombre"
                android:imeOptions="actionDone"

                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtDatosDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="DNI"
                android:inputType="number"

                android:imeOptions="actionDone"/>

            <EditText
                android:id="@+id/txtDAtosFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Fecha nacimiento"
                android:inputType="number"

                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/bottomDatosnAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Agregar"

                android:imeOptions="actionDone"/>

            <ListView
                android:id="@+id/listViewDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/txtCorreoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="correo"
                android:inputType="textEmailAddress"

                android:imeOptions="actionDone"/>

            <EditText
                android:id="@+id/txtTelefonoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Telefono"
                android:imeOptions="actionDone"

                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtHospedajeDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Hospedaje"
                android:inputType="textPersonName"

                android:imeOptions="actionDone"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>