<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustResize"
    tools:context=".view.reservaDatosClientesFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="645dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="11dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="27dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtDatosApellidoyNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Apellido y Nombre"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                tools:text="GeronimoWalter" />

            <EditText
                android:id="@+id/txtDatosDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="DNI"
                android:imeOptions="actionDone"
                android:inputType="number"
                tools:text="0000000" />

            <EditText
                android:id="@+id/txtDAtosFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Fecha nacimiento"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="070894" />

            <Button
                android:id="@+id/bottomDatosnAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:imeOptions="actionDone"

                android:text="Agregar" />

            <ListView
                android:id="@+id/listViewDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/txtCorreoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="correo"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:text="walter@gmail.com" />

            <EditText
                android:id="@+id/txtTelefonoDatosClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Telefono"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="3885628802" />

            <EditText
                android:id="@+id/txtHospedajeDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Hospedaje"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="munay dx" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>